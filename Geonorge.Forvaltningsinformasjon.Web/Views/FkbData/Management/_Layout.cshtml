@using Microsoft.AspNetCore.Mvc.Localization
@using Geonorge.Forvaltningsinformasjon.Web.Models.Common
@inject ApplicationSettings AppSettings
@inject IViewLocalizer Localizer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Localizer["Forvaltning FKB"];
    ViewData["tabs"] = new TabViewModel[] {
        new TabViewModel() { Caption = "Forvaltningssystem", Controller = "DirectUpdateInfo", Aspect = true},
        new TabViewModel() { Caption = "Transaksjonsdata", Controller = "TransactionData", Aspect = true},
        new TabViewModel() { Caption = "Driftsstatus", Controller = "OperationalStatus", Aspect = false},
    };
}

@section scripts {
<script>
    geonorge.BreadcrumbList.BreadcrumbList.setup("#breadcrumb-list", {
        breadcrumbs: [
            {
                name: 'Geonorge',
                url: '@AppSettings.UrlGeonorgeRoot'
            },
            {
                name: '@Localizer["Forvaltningsinformasjon"]',
                url: '/'
            },
            {
                name: '@Localizer["Forvaltning FKB"]',
                url: 'fkb-data/management/direct-update-info'
            }
        ]
    });
</script>
}

<partial name="~/Views/Common/Tab.cshtml" />

@RenderSection("fkbSection")