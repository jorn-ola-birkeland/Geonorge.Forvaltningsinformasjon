@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model Geonorge.Forvaltningsinformasjon.Core.Models.SentralFkbSummary
@{
    ViewData["Title"] = Localizer["Forvaltning FKB"];
}

@{
    Layout = "Layout.cshtml";
}

@section fkbSection
    {
    <p>@Localizer["Antall kommuner i Norge som oppdaterer FKB-data direkte i Sentral felles kartdatabase: "]<strong>@Model.TotaltAntallKommunerDirekteOppdatering()</strong></p>

    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th>@Localizer["Fylke"]</th>
                    <th>@Localizer["Kommuner med direkte oppdatering"]</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var row in Model.Result)
                {
                    <tr>
                        <td><a asp-controller="SentralFkb" asp-action="Fylke" asp-route-fylkesnummer="@row.Fylke.Fylkesnr">@row.Fylke.Fylkesnavn</a></td>
                        <td>@row.AntallDirekteOppdatering av @row.AntallKommunerTotalt</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}